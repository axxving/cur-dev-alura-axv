---
// Plantilla
import Layout from "../layouts/Layout.astro";
---

<Layout title="Inicio.">
  <div class="container-fluid py-5" id="enConstruccion">
    <div class="container">
      <div class="row justify-content-center align-items-center">
        <div class="col-lg-6 text-center">
          <img
            width="200"
            src="/imgs/img-construccion.png"
            alt="En Construcción"
            class="img-fluid mb-4"
          />
          <h2 class="titulo display-4">Página en Construcción</h2>
          <p class="lead">
            Estamos trabajando en mejorar nuestra página. ¡Vuelve pronto!
          </p>
        </div>
      </div>
    </div>
  </div>
</Layout>
